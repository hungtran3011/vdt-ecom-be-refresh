# Database Configuration
POSTGRES_DB=ecom
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# Cloudinary Configuration
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name

# Keycloak Bootstrap Admin
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=your_admin_password

# Mail Server Configuration
MAIL_ACCOUNTS=test@example.test|{PLAIN}testpass123,noreply@example.test|{PLAIN}noreplypass456
MAIL_ALIASES=alias1@example.test test@example.test

# Keycloak SMTP Settings
KC_SMTP_HOST=mailserver
KC_SMTP_PORT=587
KC_SMTP_FROM=noreply@example.test
KC_SMTP_USERNAME=noreply@example.test
KC_SMTP_PASSWORD=your_smtp_password

# Keycloak URLs for Spring Boot app
KEYCLOAK_SERVER_URL=http://keycloak:8080
KEYCLOAK_ISSUER_URI=http://keycloak:8080/realms/ecom
KEYCLOAK_JWK_SET_URI=http://keycloak:8080/realms/ecom/protocol/openid-connect/certs

# Mail configuration for Spring Boot app
MAIL_HOST=mailserver
MAIL_PORT=587
MAIL_USERNAME=noreply@example.test
MAIL_PASSWORD=your_mail_password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true
MAIL_SMTP_STARTTLS_REQUIRED=false
MAIL_SMTP_SSL=false
MAIL_SMTP_SSL_TRUST=*
VDT_MAIL_FROM=noreply@example.test
VDT_MAIL_ENABLED=true
VDT_MAIL_ASYNC=true

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Keycloak client credentials (SENSITIVE - Keep secure!)
KEYCLOAK_CLIENT_ID=ecom-be
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret

# Encryption key for Jasypt (SENSITIVE - Keep secure!)
JASYPT_ENCRYPTOR_PASSWORD=your_very_secure_encryption_key
